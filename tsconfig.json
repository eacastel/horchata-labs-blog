{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "es2022"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",

    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["app/*", "styles/*"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.cjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
